{
  "name": "@42.nl/react-error-store",
  "version": "1.1.0-0",
  "description": "Storing errors and listening to their changes.",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/42BV/react-error-store.git"
  },
  "keywords": [
    "Error",
    "React"
  ],
  "author": "Maarten Hus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/42BV/react-error-store/issues"
  },
  "homepage": "https://github.com/42BV/react-error-store#readme",
  "devDependencies": {
    "@testing-library/react": "11.2.1",
    "@testing-library/jest-dom": "5.11.6",
    "@types/fetch-mock": "7.3.3",
    "@types/jest": "26.0.15",
    "@types/lodash.get": "4.4.6",
    "@types/lodash.set": "4.3.6",
    "@types/react": "16.9.56",
    "@types/react-test-renderer": "16.9.3",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "eslint": "7.13.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "fetch-mock": "9.10.7",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.1",
    "node-fetch": "2.6.1",
    "np": "7.0.0",
    "prettier": "2.2.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-test-renderer": "17.0.1",
    "ts-jest": "26.4.4",
    "typescript": "4.1.2"
  },
  "scripts": {
    "start": "jest test --watch",
    "test": "npm run lint && jest test --coverage",
    "ts": "tsc --version && tsc",
    "coverage": "npm test -- --coverage",
    "lint": "eslint \"src/**\"",
    "prepublishOnly": "rm -rf lib && npm test && npm run ts",
    "release": "np --otp"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "node"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.(ts|tsx)$"
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,jsx,json,scss,ts,tsx}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2"
  }
}
